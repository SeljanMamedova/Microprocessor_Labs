#include <avr/io.h>        
#include <avr/eeprom.h>    
#include <Arduino.h>                                 // enables arduino functions like serial and pinMode

const int buttonPin = 2;                           // button connected to digital pin 2
volatile int counter = 0;                         //  holding counter value

void EEPROMWriteInt(int address, int value) {
  while (EECR & (1 << EEPE));                  // wait if EEPROM is currently busy
  EEAR = address;                             // the lower byte position
  EEDR = (value & 0xFF);                     
  EECR |= (1 << EEMPE);                     // enable write
  EECR |= (1 << EEPE);                     

  while (EECR & (1 << EEPE));            // wait again 
  EEAR = address + 1;                   // move to next EEPROM address for high byte
  EEDR = (value >> 8) & 0xFF;       
  EECR |= (1 << EEMPE);               // enable again
  EECR |= (1 << EEPE);              
}

int EEPROMReadInt(int address) {
  while (EECR & (1 << EEPE));       // wait if EEPROM is busy
  EEAR = address;                   // select address of low byte
  EECR |= (1 << EERE);              // start read
  byte low = EEDR;                  // store 

  while (EECR & (1 << EEPE));       // wait again if EEPROM is busy
  EEAR = address + 1;               // move to high byte address
  EECR |= (1 << EERE);              // start read 
  byte high = EEDR;                 // store 

  return (high << 8) | low;         
}

void setup() {
  Serial.begin(9600);
  pinMode(buttonPin, INPUT_PULLUP);                   // set button pin as input with internal pull-up

  counter = EEPROMReadInt(0);                        // read previously saved counter value from EEPROM

  
  if (counter < 0 || counter > 10000) {
    counter = 0;
    EEPROMWriteInt(0, counter);
  }

  Serial.print("Starting counter from EEPROM: ");
  Serial.println(counter);
}

void loop() {
  if (digitalRead(buttonPin) == LOW) {                      // button press 
    counter++;                                             // increment the counter
    EEPROMWriteInt(0, counter);                           // save new value 
    Serial.print("Counter: ");
    Serial.println(counter);
    delay(500);                                        // debounce delay to avoid multiple counts
  }
}
