void setup() {
  Serial.begin(9600);              

  uint8_t X = 50;                  
  uint8_t Y = 200;                 
  uint8_t R18;                                        // Result register 

  R18 = X - Y;                                      // Perform subtraction 

  Serial.print("Result (R18) = "); 
  Serial.println(R18);                            // Show the subtraction result

  if (R18 == 0) {                               // If result equals zero
    Serial.println("Zero flag (Z) = 1");       // Z flag set if the result is zero
  } else {
    Serial.println("Zero flag (Z) = 0");      // Z flag clear if the result not zero
  }

  
  if (X < Y) {                              // If X < Y in that case borrow will occur in subtraction
    Serial.println("Carry flag (C) = 1 (borrow occurred)");
  } else {
    Serial.println("Carry flag (C) = 0");  // No borrow
  }
}

void loop() {
  // Empty loop â€“ all operations done in setup()
}
